<div class="wrapper-big">
  <div class="container">
    {{#each post}}
    <div class="row mt-4 mb-3">
      <div class="col-md-7 mb-3">
        <h2 class="text-primary">{{subject}}</h2>
        <div class="newlines">
          <p align="justify" id="textDB">{{content}}</p>
        </div>
        <span>Category: <a href="/app/categories/{{category.slug}}">{{category.name}}</a></span>
      </div>
      <div class="col-md-5">
        <div class="card bg-dark mt-2">
          <div class="card-header text-center text-primary">
            Tips
          </div>
          <div class="card-body">
            <div class="card-text">
              <h6 class="text-center"><b>{{grammarrule.name}}</b></h6>
              <p>{{grammartip}}</p>
              <h6 class="text-center"><b>Vocabulary</b></h6>
              <p>{{vocabtip}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
<script type="text/javascript">
  document.getElementById("textDB").innerHTML = document.getElementById("textDB").textContent;
</script>