<div class="wrapper-big">
  <div class="container">
    {{#if user}}
    <div class="row">
      <div class="col-12">
        <center>
          <h1 class="text-primary mt-5">Welcome, {{user.name}}!</h1>
          <p class="mt-3">Latest News:</p>
        </center>
      </div>
    </div>
    <hr class="bg-dark">
    {{/if}}
    {{> _flash}}
    {{#each posts}}
    <div class="row mt-5 mb-4">
      <div class="col-md-8">
        <h2 class="text-primary"><a href="/app/news/{{slug}}">{{subject}}</a></h2>
        <div class="newlines">
          <p align="justify" class="p">{{summary}}</p>
        </div>
        <span>Category: <a href="/app/categories/{{category.slug}}">{{category.name}}</a></span>
      </div>
      <div class="col-md-4 align-self-center">
        <div class="card text-center bg-dark mt-2 mb-4">
          <div class="card-header text-primary">
            Tips
          </div>
          <div class="card-body">
            <div class="card-text">
              <p>In the report we're going to explain more about <b>{{grammarrule.name}}</b>.</p>
              <a href="/app/news/{{slug}}">See more</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <hr class="bg-dark">
    {{/each}}
    <script type="text/javascript">
      var x = document.getElementsByClassName("p").length;
      for (i = 0; i < x; i++) {
        document.getElementsByClassName("p")[i].innerHTML = document.getElementsByClassName("p")[i].textContent;
      }
    </script>
    {{#if posts}}
    <nav aria-label="Page navigation example" class="mt-5">
      <ul class="pagination">
        {{#paginate pagination type="first"}}
        <li class="page-item" {{#if disabled}}class="disabled" {{/if}}>
          <a href="?p={{n}}" class="page-link"><i class=" fas fa-angle-double-left"></i>
          </a>
        </li>
        {{/paginate}}
        {{#paginate pagination type="previous"}}
        <li class="page-item" {{#if disabled}}class="disabled" {{/if}}>
          <a href="?p={{n}}" class="page-link"><i class="fas fa-angle-left"></i>
          </a>
        </li>
        {{/paginate}}
        {{#paginate pagination type="middle" limit="4"}}
        <li class="page-item" {{#if active}}class="active" {{/if}}><a href="?p={{n}}" class="page-link">{{n}}</a></li>
        {{/paginate}}
        {{#paginate pagination type="next"}}
        <li class="page-item" {{#if disabled}}class="disabled" {{/if}}><a href="?p={{n}}" class="page-link"><i
              class="fas fa-angle-right"></i></a>
        </li>
        {{/paginate}}
        {{#paginate pagination type="last"}}
        <li class="page-item" {{#if disabled}}class="disabled" {{/if}}><a href="?p={{n}}" class="page-link"><i
              class="fas fa-angle-double-right"></i></a></li>
        {{/paginate}}
      </ul>
    </nav>
    {{/if}}
  </div>
</div>