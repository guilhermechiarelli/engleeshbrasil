<div class="wrapper-small">
  <section>
    <div class="container">
      <div class="row justify-content-center mt-5">
        <center>
          <p class="p-2 bg-warning text-dark h6">Admin Settings</p>
        </center>
      </div>
      <div class="row mt-3">
        <div class="col-md-12 d-flex justify-content-center">
          <div class="align-self-center">
            <center>
              <h1 class="text-warning">
                Add Category
              </h1>
              <p class="mt-3">
                Fill out the first field to create a new category.
              </p>
            </center>
          </div>
        </div>
      </div>
      {{> _flash}}
      <div class="row justify-content-center mt-2">
        <div class="col-md-12 col-lg-6">
          <div class="post-form">
            <center>
              <form action="/admin/category/add/new" method="POST"
                onsubmit="return confirm('Are you sure you want to ADD a new category?');">
                <input type="text" name="categoryname" placeholder="Name" class="form form-control" id="categoryname"
                  onkeyup="change();" required />
                <input type="text" name="categoryslug" placeholder="Slug" class="form form-control mt-2"
                  id="categoryslug" required readonly />
                <button type="submit" class="btn btn-primary mt-2">Add</button>
              </form>
            </center>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<script type="text/javascript">
  function change() {
    const categoryName = document.getElementById("categoryname");
    const categorySlug = document.getElementById("categoryslug");
    categorySlug.value = categoryName.value.toLowerCase().replace(/\s/g, "-")
      .replace(/[ÀÁÂÃÄÅ]/g, "A")
      .replace(/[àáâãäå]/g, "a")
      .replace(/[ÈÉÊË]/g, "E")
      .replace(/[èéêë]/g, "e")
      .replace(/[ÌÍÎÏ]/g, "I")
      .replace(/[ìíîï]/g, "i")
      .replace(/[ÒÓÔÖÕ]/g, "O")
      .replace(/[òóôöõ]/g, "o")
      .replace(/[ÙÚÛÜ]/g, "U")
      .replace(/[ùúûü]/g, "u")
      .replace(/[ç]/g, "c")
      .replace(/[ñ]/g, "n")
      .replace(/[']/g, "-")
      .replace(/[~`´¨ªº°§¬¢£³²¹–!‘’@#$%^&*(){}\[\];:"'<,.>?\/\\|_+=]/g, "")
      .replace(/\s/g, "-")
      .replace(" ", "-");
  }
</script>