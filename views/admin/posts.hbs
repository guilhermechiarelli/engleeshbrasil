<div class="wrapper-big">
  <div class="container">
    <div class="row justify-content-center mt-5">
      <center>
        <p class="p-2 bg-warning text-dark h6">Admin Settings</p>
      </center>
    </div>
    <div class="row mt-3 mb-4">
      <div class="col-12">
        <center>
          <a href="/author/post" style="color:#dcdcdc"><button class="btn btn-primary">Add a new article!</button></a>
        </center>
      </div>
    </div>
    {{> _flash}}
    <hr class="bg-dark">
    {{#each posts}}
    <div class="row mt-4 mb-4">
      <div class="col-md-8">
        <h2><a href="/admin/news/edit/{{slug}}">{{subject}}</a></h2>
        <div class="newlines">
          <p align="justify" class="p">{{summary}}</p>
        </div>
        <span>Category: <a href="/admin/categories">{{category.name}}</a></span>
        <br>
        <a href="/admin/news/edit/{{slug}}"><button class="btn btn-warning mt-5">Edit Article</button></a>
      </div>
      <div class="col-md-4 align-self-center">
        <div class="card text-center bg-dark mt-4 mb-2">
          <div class="card-header text-primary">
            Tips
          </div>
          <div class="card-body">
            <div class="card-text">
              <p>In the report we're going to explain more about <b>{{grammarrule.name}}</b>.</p>
              <a href="/admin/news/edit/{{slug}}">See more</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <hr class="bg-dark">
    {{/each}}
    <script type="text/javascript">
      var x = document.getElementsByClassName("p").length;
      for (i = 0; i < x; i++) {
        document.getElementsByClassName("p")[i].innerHTML = document.getElementsByClassName("p")[i].textContent;
      }
    </script>
    {{#if posts}}
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        {{#paginate pagination type="first"}}
        <li class="page-item" {{#if disabled}}class="disabled" {{/if}}>
          <a href="?p={{n}}" class="page-link"><i class=" fas fa-angle-double-left"></i>
          </a>
        </li>
        {{/paginate}}
        {{#paginate pagination type="previous"}}
        <li class="page-item" {{#if disabled}}class="disabled" {{/if}}>
          <a href="?p={{n}}" class="page-link"><i class="fas fa-angle-left"></i>
          </a>
        </li>
        {{/paginate}}
        {{#paginate pagination type="middle" limit="4"}}
        <li class="page-item" {{#if active}}class="active" {{/if}}><a href="?p={{n}}" class="page-link">{{n}}</a></li>
        {{/paginate}}
        {{#paginate pagination type="next"}}
        <li class="page-item" {{#if disabled}}class="disabled" {{/if}}><a href="?p={{n}}" class="page-link"><i
              class="fas fa-angle-right"></i></a>
        </li>
        {{/paginate}}
        {{#paginate pagination type="last"}}
        <li class="page-item" {{#if disabled}}class="disabled" {{/if}}><a href="?p={{n}}" class="page-link"><i
              class="fas fa-angle-double-right"></i></a></li>
        {{/paginate}}
      </ul>
    </nav>
    {{/if}}
  </div>
</div>