<div class="wrapper-big">
  <div class="container">
    <div class="row justify-content-center mt-5">
      <center>
        <p class="p-2 bg-warning text-dark h6">Admin Settings</p>
      </center>
    </div>
    <div class="row mt-3 mb-1">
      <div class="col-12">
        <center>
          <h1 class="text-warning">
            Pendding Articles
          </h1>
          <p class="mt-3">
            Please, the articles below need to be approved:
          </p>
        </center>
      </div>
    </div>
    <hr class="bg-dark">
    {{> _flash}}
    <div class="row mt-1">
      <div class="col-12">
        {{#each posts}}
        <div class="card text-white bg-dark mb-4">
          <div class="card-body">
            <h4 class="card-title"><a href="/admin/pendding/posts/{{slug}}">{{subject}}</a></h4>
            <p class="card-text p">{{summary}}</p>
            <p>Grammar: {{grammarrule.name}}</p>
            <p>Category: {{category.name}}</p>
            <p>By: {{author.name}} {{author.surname}}</p>
            <a href="/admin/pendding/posts/{{slug}}" class="btn btn-primary mr-2">Check</a>
          </div>
        </div>
        {{else}}
        <center>
          <p class="mt-4">Congrats! There are no pendding posts!</p>
        </center>
        {{/each}}
      </div>
    </div>
    {{#if posts}}
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        {{#paginate pagination type="first"}}
        <li class="page-item" {{#if disabled}}class="disabled" {{/if}}>
          <a href="?p={{n}}" class="page-link"><i class=" fas fa-angle-double-left"></i>
          </a>
        </li>
        {{/paginate}}
        {{#paginate pagination type="previous"}}
        <li class="page-item" {{#if disabled}}class="disabled" {{/if}}>
          <a href="?p={{n}}" class="page-link"><i class="fas fa-angle-left"></i>
          </a>
        </li>
        {{/paginate}}
        {{#paginate pagination type="middle" limit="4"}}
        <li class="page-item" {{#if active}}class="active" {{/if}}><a href="?p={{n}}" class="page-link">{{n}}</a></li>
        {{/paginate}}
        {{#paginate pagination type="next"}}
        <li class="page-item" {{#if disabled}}class="disabled" {{/if}}><a href="?p={{n}}" class="page-link"><i
              class="fas fa-angle-right"></i></a>
        </li>
        {{/paginate}}
        {{#paginate pagination type="last"}}
        <li class="page-item" {{#if disabled}}class="disabled" {{/if}}><a href="?p={{n}}" class="page-link"><i
              class="fas fa-angle-double-right"></i></a></li>
        {{/paginate}}
      </ul>
    </nav>
    {{/if}}
  </div>
</div>
<script type="text/javascript">
  var x = document.getElementsByClassName("p").length;
  for (i = 0; i < x; i++) {
    document.getElementsByClassName("p")[i].innerHTML = document.getElementsByClassName("p")[i].textContent;
  }
</script>