<div class="wrapper-big">
  <div class="container">
    <div class="row mt-5 mb-4">
      <div class="col-12">
        <h1 class="text-success">
          Welcome, {{user.name}}!
        </h1>
        <p class="mt-3">
          Here you can verify your pendding articles or add a new one! As soon as possible it's going to be approved!
        </p>
        <a href="/author/post" style="color:#dcdcdc"><button class="btn btn-primary">Add a new article!</button></a>
      </div>
    </div>
    {{> _flash}}
    <hr class="bg-dark">
    <div class="row mt-1">
      <div class="col-12">
        <center>
          <p><b>Your Pendding Posts:</b></p>
        </center>
        {{#each posts}}
        <div class="card text-white bg-dark mb-4">
          <div class="card-body">
            <h5 class="card-title"><a href="/author/edit/{{slug}}">{{subject}}</a></h5>
            <p class="card-text p">{{summary}}</p>
            <p>Grammar: {{grammarrule.name}}</p>
            <p>Category: {{category.name}}</p>
            <a href="/author/edit/{{slug}}" class="btn btn-primary mr-2">Edit</a>
          </div>
        </div>
        {{else}}
        <center>
          <p class="mt-3">Congrats! There're no pendding posts!</p>
        </center>
        {{/each}}
      </div>
    </div>
    {{#if posts}}
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        {{#paginate pagination type="first"}}
        <li class="page-item" {{#if disabled}}class="disabled" {{/if}}>
          <a href="?p={{n}}" class="page-link"><i class=" fas fa-angle-double-left"></i>
          </a>
        </li>
        {{/paginate}}
        {{#paginate pagination type="previous"}}
        <li class="page-item" {{#if disabled}}class="disabled" {{/if}}>
          <a href="?p={{n}}" class="page-link"><i class="fas fa-angle-left"></i>
          </a>
        </li>
        {{/paginate}}
        {{#paginate pagination type="middle" limit="4"}}
        <li class="page-item" {{#if active}}class="active" {{/if}}><a href="?p={{n}}" class="page-link">{{n}}</a></li>
        {{/paginate}}
        {{#paginate pagination type="next"}}
        <li class="page-item" {{#if disabled}}class="disabled" {{/if}}><a href="?p={{n}}" class="page-link"><i
              class="fas fa-angle-right"></i></a>
        </li>
        {{/paginate}}
        {{#paginate pagination type="last"}}
        <li class="page-item" {{#if disabled}}class="disabled" {{/if}}><a href="?p={{n}}" class="page-link"><i
              class="fas fa-angle-double-right"></i></a></li>
        {{/paginate}}
      </ul>
    </nav>
    {{/if}}
  </div>
</div>
<script type="text/javascript">
  var x = document.getElementsByClassName("p").length;
  for (i = 0; i < x; i++) {
    document.getElementsByClassName("p")[i].innerHTML = document.getElementsByClassName("p")[i].textContent;
  }
</script>