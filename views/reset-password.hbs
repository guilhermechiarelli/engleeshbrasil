<div class="wrapper-small">
  <div class="container">
    <div class="row mt-5">
      <div class="col-12">
        <center>
          <h1 class="text-primary">
            New Password
          </h1>
          <p class="mt-3">
            Fill in your new password in the fields below:
          </p>
        </center>
      </div>
    </div>
    {{> _flash}}
    <div class="row justify-content-center mt-2">
      <div class="col-md-12 col-lg-6">
        <div class="post-form">
          {{#each token_ok}}
          <form action="/forgot/{{token}}" method="POST">
            <center>
              <input type="password" name="password" placeholder="Password" class="form-control mt-2" maxlength="30"
                required>
              <input type="password" name="password2" placeholder="Password" class="form-control mt-2" maxlength="30"
                required>
              <input type="hidden" name="user_id" value="{{userId}}" required>
              <button type="submit" class="form-control btn btn-primary mt-2 mb-2">Update Password</button>
            </center>
          </form>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>